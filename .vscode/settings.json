{
  "json.schemas": [
    {
      "fileMatch": [
        "**/AdventureApp*.json"
      ],
      "url": "./resources/adventure-app.schema.json"
    }
  ],
  "yaml.customTags": [
    "!Equals sequence",
    "!FindInMap sequence",
    "!GetAtt",
    "!GetAZs",
    "!ImportValue",
    "!Join sequence",
    "!Ref",
    "!Select sequence",
    "!Split sequence",
    "!Sub"
  ],
  // Disable tslint for the newer eslint-typescript
  "tslint.exclude": ["**/*.ts"],
  // formatting using eslint
  "eslint.enable": true,
  "eslint.validate": [
    {
      "language": "javascript",
      "autoFix": true
    },
    {
      "language": "typescript",
      "autoFix": true
    },
  ],
  "eslint.run": "onType",
  "eslint.packageManager": "yarn",
  "editor.formatOnSave": true,
  // available through eslint plugin in vscode
  "eslint.autoFixOnSave": true,
  "eslint.alwaysShowStatus": true,
}
