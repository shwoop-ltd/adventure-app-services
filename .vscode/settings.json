{
  "json.schemas": [
    {
      "fileMatch": [
        "**/AdventureApp*.json"
      ],
      "url": "./resources/adventure-app.schema.json"
    }
  ],
  "yaml.customTags": [
    "!Equals sequence",
    "!FindInMap sequence",
    "!GetAtt",
    "!GetAZs",
    "!ImportValue",
    "!Join sequence",
    "!Ref",
    "!Select sequence",
    "!Split sequence",
    "!Sub"
  ],
  // formatting using eslint
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "typescript",
  ],
  "eslint.run": "onType",
  "eslint.packageManager": "yarn",
  "typescript.format.insertSpaceAfterKeywordsInControlFlowStatements": false,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
}
