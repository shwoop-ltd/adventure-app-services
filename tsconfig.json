{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "schemas": ["src/_schemas/index.ts"],
      "schemas/*": ["src/_schemas/*"],
      "/opt/nodejs": ["src/_common/nodejs/index.ts"],
      "/opt/nodejs/*": ["src/_common/nodejs/*"],
      "*": ["*"]
    },
    "types": ["node", "jest"],
    "esModuleInterop": false,
    "inlineSourceMap": false,
    "noEmit": true
  }
}
