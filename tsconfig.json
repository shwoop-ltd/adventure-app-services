{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,

    "baseUrl": "./src",
    "outDir": "./build",
    "paths": {
      "schemas": ["_schemas/index.ts"],
      "schemas/*": ["_schemas/*"],
      "/opt/nodejs": ["_common/nodejs/index.ts"],
      "/opt/nodejs/*": ["_common/nodejs/*"]
    },

    "types": ["node"],
    "esModuleInterop": false,
    "inlineSourceMap": false
  },
  "include": ["./src/**/*.ts"]
}
