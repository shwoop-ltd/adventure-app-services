{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "baseUrl": "./src",
    "outDir": "./build",
    "paths": {
      "/opt/nodejs/*": ["_common/nodejs/*"]
    },
    "types": ["node"],
    "esModuleInterop": false,
    "inlineSourceMap": false
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./src/**/*.spec.ts"]
}
